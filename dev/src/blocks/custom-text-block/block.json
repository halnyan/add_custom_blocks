{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "myplugin/custom-text",
	"title": "カスタムテキスト",
	"category": "common",
	"icon": "edit",
	"description": "テキストをa/p/span/divタグで表示。aのときはリンク先も設定可。",
	"attributes": {
		"tagName": {
			"type": "string",
			"default": "p"
		},
		"content": {
			"type": "string",
			"source": "html",
			"selector": "*"
		},
		"href": {
			"type": "string"
		},
		"target": {
			"type": "string"
		}
	},
	"editorScript": "file:./index.js"
}
